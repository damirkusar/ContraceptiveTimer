package ch.kusar.contraceptivetimer.wrapper;

import java.util.Calendar;
import java.util.GregorianCalendar;
import java.util.TimeZone;

public class CalendarWrapper {

	private static GregorianCalendar getGregorianCalendarInstance() {
		return (GregorianCalendar) Calendar.getInstance(TimeZone.getDefault());
	}

	public static GregorianCalendar getActualCalendarWithoutHourMinutesSeconds() {
		new GregorianCalendar();
		return CalendarWrapper
				.convertToCalendarWithoutHourMinutesSeconds(CalendarWrapper
						.getGregorianCalendarInstance());
	}

	public static GregorianCalendar convertToCalendarWithoutHourMinutesSeconds(
			Calendar calendar) {
		Calendar cal = calendar;

		cal.set(Calendar.HOUR_OF_DAY, 0);
		cal.set(Calendar.MINUTE, 0);
		cal.set(Calendar.SECOND, 0);

		return (GregorianCalendar) cal;
	}
}
