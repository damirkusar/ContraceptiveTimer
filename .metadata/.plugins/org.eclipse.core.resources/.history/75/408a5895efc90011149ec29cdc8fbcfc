package ch.kusar.contraceptivetimer.wrapper;

import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectOutputStream;

import android.content.Context;
import android.provider.OpenableColumns;
import android.util.Log;
import ch.kusar.contraceptivetimer.businessobjects.AlarmData;

public class InternalStorageWrapper {
		
	private static final String FILENAME = "ContraceptiveTimerData";
	private static final String TAG = "InternalStorageWrapper";

	public boolean saveToStorage(AlarmData alarmData, Context ctx) {
		try{
			FileOutputStream fos = ctx.openFileOutput(this.FILENAME, Context.MODE_PRIVATE);	 
			ObjectOutputStream oos = new ObjectOutputStream(fos);
			oos.writeObject(alarmData);
			oos.close();
			return true;
		} catch (FileNotFoundException e) {
            e.printStackTrace();
        }catch(IOException e){
            e.printStackTrace();
        }
		return false;
		
	}

}
